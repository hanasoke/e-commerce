<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%= @title|| "Default Page" %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-danger">
      <div class="container">
        <a class="navbar-brand text-info" href="/account">Main Page</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active text-warning" aria-current="page" href="/seller">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/user_profile/<%= current_user['user_id'] %>">User Profile</a>
            </li>
          </ul>

          <!-- Right-aligned nav items (Login & Register) -->
          <ul class="navbar-nav mb-2 mb-lg-0">
            
            <li class="nav-item">
              <a class="nav-link text-white" href="#">
                <img src="/img/icons/heart-fill.svg" alt="My Wishlists">
              </a>
            </li>
            <% if current_user['access'].to_i == 1 %>
              <!-- Show "Open Store" only for users with access level 1 -->
              <li class="nav-item">
                  <a class="nav-link text-white" href="/seller_register/<%= current_user['user_id'] %>">Open Store</a>
              </li>
            <% elsif current_user['access'].to_i == 2 %>
              <!-- Show "My Store" only for users with access level 2 -->
              <li class="nav-item">
                <a class="nav-link text-white" href="/seller_dashboard/<%= current_user['user_id'] %>">My Store</a>
              </li>
            <% end %>

            <li class="nav-item">
              <button class="nav-link text-white" data-bs-toggle="modal" data-bs-target="#exampleModal"><img src="/img/icons/box-arrow-right.svg" alt="My Wishlists"></button>
            </li>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Log Out</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    Are You Sure want to log out ?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a href="/logout" class="btn btn-primary">Log Out</a>
                  </div>
                </div>
              </div>
            </div>

          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
  </body>
</html>