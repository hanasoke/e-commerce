<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Adding A Service</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user me-1"></i>
        </div>
        <div class="card-body">
            <form action="/edit_a_service/<%= @service['service_id'] %>" method="post">
                <div class="mb-3">
                    <input type="hidden" name="_method" value="post">
                </div>
                <div class="mb-3 row">
                    <label for="service_name" class="col-sm-2 col-form-label">Service Name</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="service_name" name="service_name">
                            <option disabled <%= (@service['service_name'].nil? || @service['service_name'].empty?) ? 'selected' : '' %>>Select A Delivery</option>
                            <option value="JNE" <%= (@service['service_name'] == 'JNE' || params[:service_name] == 'JNE') ? 'selected' : '' %>>JNE</option>
                            <option value="TIKI" <%= (@service['service_name'] == 'TIKI' || params[:service_name] == 'TIKI') ? 'selected' : '' %>>TIKI</option>
                            <option value="WAHANA" <%= (@service['service_name'] == 'WAHANA' || params[:service_name] == 'WAHANA') ? 'selected' : '' %> >WAHANA</option>
                            <option value="SICEPAT" <%= (@service['service_name'] == 'SICEPAT' || params[:service_name] == 'SICEPAT') ? 'selected' : '' %> >Sicepat</option>
                            <option value="J&T" <%= (@service['service_name'] == 'J&T' || params[:service_name] == 'J&T') ? 'selected' : '' %>>J&T</option>
                            <option value="Lion" <%= (@service['service_name'] == 'Lion' || params[:service_name] == 'Lion') ? 'selected' : '' %>>Lion</option>
                        </select>
                    </div>
                    <% if @errors.any? { |e| e.include?('Service Name')} %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('Service Name')} %>
                        </div>
                    <% end %>
                </div>
                <div class="mb-3 row">
                    <label for="fee" class="col-sm-2 col-form-label">Fee</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="fee" name="fee" value="<%= @service['fee']%>"/>
                    </div>
                    <% if @errors.any? { |e| e.include?('Fee')} %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('Fee')} %>
                        </div>
                    <% end %>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-outline-primary float-end">Submit</button>
            </form>

            <!-- Back Button -->
            <a href="/service_lists"  class="btn btn-outline-secondary float-start">Back</a>
        </div>
    </div>
</div>