<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Adding A Service</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user me-1"></i>
        </div>
        <div class="card-body">
            <form action="/edit_a_service/<%= @service['service_id'] %>" method="post">
                <div class="mb-3">
                    <input type="hidden" name="_method" value="post">
                </div>
                <div class="mb-3 row">
                    <label for="service_name" class="col-sm-2 col-form-label">Service Name</label>
                    <div class="col-sm-10">

                        <% used_services = DB.execute("SELECT service_name FROM services WHERE service_id != ?", [@service['service_id']]).map { |s| s['service_name'] } %>

                        <select class="form-select" id="service_name" name="service_name">
                            <option disabled>Select A Delivery</option>
                            
                            <% ["JNE", "TIKI", "WAHANA", "SICEPAT", "J&T", "Lion"].each do |s| %>
                                <option value="<%= s %>"
                                    <%= (@service['service_name'] == s || params[:service_name] == s) ? 'selected' : '' %>
                                    <%= used_services.include?(s) ? 'disabled' : '' %>>
                                    <%= s %>
                                </option>
                            <% end %>
                        </select>
                    </div>
                    <% if @errors.any? { |e| e.include?('Service Name')} %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('Service Name')} %>
                        </div>
                    <% end %>
                </div>
                <div class="mb-3 row">
                    <label for="fee" class="col-sm-2 col-form-label">Fee</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="fee" name="fee" value="<%= @service['fee']%>"/>
                    </div>
                    <% if @errors.any? { |e| e.include?('Fee')} %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('Fee')} %>
                        </div>
                    <% end %>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-outline-primary float-end">Submit</button>
            </form>

            <!-- Back Button -->
            <a href="/service_lists"  class="btn btn-outline-secondary float-start">Back</a>
        </div>
    </div>
</div>