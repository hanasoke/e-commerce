<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Store Lists</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Store Lists
        </div>
        <div class="card-body">
            <% if session[:success] %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><%= session[:success] %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" ></button>
                </div>
                <% session[:success] = nil %>
            <% end %>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            No
                        </th>
                        <th>
                            Store Owner
                        </th>
                        <th>
                            Store Name
                        </th>
                        <th>
                            Store Photo 
                        </th>
                        <th>
                            Store Banner
                        </th>
                        <th>
                            Store Address 
                        </th>
                        <th>
                            Customer Service Number
                        </th>
                        <th>
                            Store Status 
                        </th>
                        <th>
                            Action 
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% @stores.each_with_index do |store, index| %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= store["owner_name"] %>
                                <br>
                            </td>
                            <td>
                                <%= store["store_name"]%>
                            </td>
                            <td>
                                <% if store["store_photo"] %>
                                    <img src="/uploads/stores/<%= store["store_photo"]%>" alt="Store Photo" width="80">
                                <% end %>
                            </td>
                            <td>
                                <% if store["store_banner"] %>
                                    <img src="/uploads/stores/<%= store["store_banner"] %>" alt="Store Banner" width="120" >
                                <% end %>
                            </td>
                            <td>
                                <%= store["store_address"] %>
                            </td>
                            <td>
                                <%= store["cs_number"] %>
                            </td>
                            <td>
                                <% if store["store_status"] == "Active" %>
                                    <span class="badge bg-success">Open</span>
                                <% else %>
                                    <span class="badge bg-danger">Closed</span>
                                <% end %>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-danger btn-sm mb-1" data-bs-toggle="modal" data-bs-target="#deleteModal<%= store["store_id"] %>" >
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                                <a href="#" class="btn btn-info text-white btn-sm mb-1"><i class="fa-solid fa-eye"></i></a>
                            </td>
                        </tr>

                        <!-- Modal -->
                        <div class="modal fade" id="deleteModal<%= store['store_id'] %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= store['store_id'] %>" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title fs-5" id="deleteModalLabel<%= store['store_id'] %>">Confirm Deletion</h3>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure want to delete this Store ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <form action="/delete_store/<%= store['store_id'] %>" method="POST">
                                            <button type="submit" class="btn btn-primary">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>