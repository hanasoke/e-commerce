<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Seller Lists</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Seller Lists
        </div>
        <div class="card-body">
            <% if session[:success] %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><%= session[:success] %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% session[:success] = nil %>
            <% end %>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>User Full Name</th>
                        <th>User Email</th>
                        <th>User Photo</th>
                        <th>User Phone Number</th>
                        <th>Seller Identity</th>
                        <th>Seller Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% @sellers.each_with_index do |seller, index| %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= seller['name'] %></td>
                            <td><%= seller['email'] %></td>
                            <td>
                                <% if seller['photo'] %>
                                    <img src="/uploads/users/<%= seller['photo'] %>" style="max-width: 100px; border-radius: 8px;">
                                <% else %>
                                    <p>No Photo Available</p>
                                <% end %>
                            </td>
                            <td><%= seller['phone'] %></td>
                            <td>
                                <% if seller['identity_photo'] %>
                                    <img src="/uploads/sellers/<%= seller['identity_photo'] %>" style="max-width: 100px"/>
                                <% else %>
                                    <p>No Photo Available</p>
                                <% end %>
                            </td>
                            <td><%= seller['address'] %></td>
                            <td>
                                <div class="btn-group-sm btn-group" role="group" aria-label="Button Group">
                                    <button type="submit" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= seller['seller_id'] %>"><i class="fa-solid fa-trash"></i></button>
                                    <a href="/view_seller_detail/<%= seller['seller_id'] %>" class="btn btn-info text-white"><i class="fa-solid fa-eye"></i></a>
                                </div>
                            </td>
                        </tr>

                        <!-- Modal -->
                        <div class="modal fade" id="deleteModal<%= seller['seller_id'] %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= seller['seller_id'] %>" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title fs-5" id="deleteModalLabel<%= seller['seller_id'] %>">Confirm Deletion</h3>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure want to delete this User ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <form action="/delete_seller/<%= seller['seller_id'] %>" method="POST">
                                            <button type="submit" class="btn btn-primary">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>