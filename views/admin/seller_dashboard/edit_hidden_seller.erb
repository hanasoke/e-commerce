<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Editing Seller Identity</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user me-1"></i>
            Edit Seller Identity
        </div>
        <div class="card-body">
            <form action="/edit_hidden_seller/<%= @seller['seller_id'] %>" method="POST" enctype="multipart/form-data" >
                <div class="mb-3">
                    <label for="identity_photo" class="form-label">Photo</label>
                    <br>
                    <% if @seller['identity_photo'] %>
                        <img class="img-thumbnail mb-2" src="/uploads/sellers/<%= @seller['identity_photo'] %>" alt="#" style="max-width: 200px">
                    <% end %>
                    <input type="file" class="form-control  mt-2" id="identity_photo" name="identity_photo">
                    <% if @errors.any? { |e| e.include?('Photo') } %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('Photo')}%>
                        </div>
                    <% end %>
                </div>
                <button type="submit" class="btn btn-primary float-end">Submit</button>
            </form>
            <a class="btn btn-outline-secondary float-start" href="/user_lists"><i class="fa-solid fa-arrow-left"></i> Back</a>
        </div>
    </div>
</div>