<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Seller Lists</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Seller Lists
        </div>
        <div class="card-body">
            <% if session[:success] %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><%= session[:success] %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% session[:success] = nil %>
            <% end %>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Seller Name</th>
                        <th>Seller Photo</th>
                        <th>Store Name</th>
                        <th>Store Photo</th>
                        <th>Item Name</th>
                        <th>Item Brand</th>
                        <th>Item Category</th>
                        <th>Item Photo</th>
                        <th>Item Price</th>
                    </tr>
                </thead>

                <tbody>
                    <% @seller_items.each_with_index do |row, index| %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= row["seller_name"] %>
                        </td>
                        <td>
                            <% if row["seller_photo"] %>
                                <img src="/uploads/users/<%= row["seller_photo"] %>" alt="Seller Photo" width="50">
                            <% end %>
                        </td>
                        <td>
                            <%= row["store_name"] %>
                        </td>
                        <td>
                            <% if row["store_photo"] %>
                                <img src="/uploads/stores/<%= row["store_photo"] %>" alt="Store Photo" width="50">
                            <% end %>
                        </td>
                        <td>
                            <%= row["item_name"] %>
                        </td>
                        <td>
                            <%= row["item_brand"] %>
                        </td>
                        <td>
                            <%= row["item_category"] %>
                        </td>
                        <td>
                            <% if row["item_photo"] %>
                                <img src="/uploads/items/<%= row["item_photo"] %>" alt="Item Photo" width="50">
                            <% end %>
                        </td>
                        <td>
                            <%= rupiah_currency(row["item_price"]) %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>