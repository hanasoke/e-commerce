<div class="col-lg-5">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header">
            <h3 class="text-center font-weight-light my-4">Login</h3>
        </div>
        
        <div class="card-body">

            <% if session[:success] %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><%= session[:success] %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% session[:success] = nil %>
            <% end %>

            <% if @errors && @errors.any? %>
                <% @errors.each do |error| %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% end %>
            <% end %>

            <form action="/login" method="post">
                <% remembered_email = request.cookies['remember_email'] %>
                <% remembered_password = request.cookies['remember_password'] %>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="fa-solid fa-envelope"></i>
                    </span>
                    <div class="form-floating position-relative">
                        <input class="form-control" id="login_email" name="email" type="email" placeholder="Input Your Email" value="<%= params[:email] || remembered_email %>" />
                        <label for="email">Email address</label>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" onclick="togglePassword('password', this)" style="cursor:pointer;">
                        <i class="fa-solid fa-eye-slash passwordeyes"></i>
                    </span>
                    <div class="form-floating position-relative">
                        <input class="form-control" id="password" name="password" type="password" placeholder="Input Your Password" value="<%= params[:password] || remembered_password %>" />
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="form-check mb-3">
                    <% remember_checked = remembered_email ? 'checked' : '' %>
                    <input class="form-check-input" id="remember" name="remember" type="checkbox" <%= remember_checked %> />
                    <label class="form-check-label" for="remember">Remember Me</label>
                </div>
                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <a class="small" href="/forgot_password">Forgot Password?</a>
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>

        </div>
        <div class="card-footer text-center py-3">
            <div class="small">Need an account? <a href="/register">Sign up!</a></div>
        </div>
    </div>
</div>