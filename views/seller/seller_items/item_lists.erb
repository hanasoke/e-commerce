<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard Items</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Item Lists</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Item Lists

            <a href="/add_an_item/<%= current_user['user_id'] %>" class="btn btn-sm btn-success float-end">Add An Item</a>
        </div>
        <div class="card-body">
            <% if session[:success] %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><%= session[:success] %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% session[:success] = nil %>
            <% end %>
            <% if session[:error] %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong><%= session[:error] %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% session[:error] = nil %>
            <% end %>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Item Name</th>
                        <th>Category</th>
                        <th>Brand</th>
                        <th>Stock</th>
                        <th>Price</th>
                        <th>Photo</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% items = DB.execute("SELECT * FROM items WHERE store_id = (SELECT store_id FROM stores WHERE seller_id = (SELECT seller_id FROM sellers WHERE user_id = ?))", [current_user['user_id']]) %>
                    <% items.each_with_index do |item, index| %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= item['item_name'] %></td>
                        <td><%= item['item_category'] %></td>
                        <td><%= item['item_brand'] %></td>
                        <td><%= item['item_stock'] %></td>
                        <td><%= rupiah_currency(item['item_price']) %></td>
                        <td>
                            <img src="/uploads/items/<%= item['item_photo'] %>" alt="Item Photo" width="150">
                        </td>
                        <td>
                            <% if item['item_status'] == "Active" %>
                                <span class="badge bg-success">Active</span>
                            <% else %>
                                <span class="badge bg-danger">Inactive</span>
                            <% end %>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group" aria-label="Button Group">
                                <button type="submit" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= item['item_id'] %>" ><i class="fa-solid fa-trash"></i></button>
                                <a href="/view_an_item/<%= item['item_id'] %>" class="btn btn-info text-white"><i class="fa-solid fa-eye"></i></a>
                                <a href="/edit_an_item/<%= item['item_id'] %>" class="btn btn-primary"><i class="fa-solid fa-edit"></i></a>
                            </div>

                            <!-- Modal -->
                            <div class="modal fade" id="deleteModal<%= item['item_id'] %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= item['item_id'] %>" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h3 class="modal-title fs-5" id="deleteModalLabel<%= item['item_id'] %>">Confirm Deletion</h3>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure want to delete this Item ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <form action="/delete_an_item/<%= item['item_id'] %>" method="POST">
                                                <button type="submit" class="btn btn-primary">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>