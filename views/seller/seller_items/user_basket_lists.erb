<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">User Basket Lists</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-warehouse me-1"></i>
            Basket Lists
        </div>
        <div class="card-body">
            <% if session[:success] %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><%= session[:success] %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% session[:success] = nil %>
            <% end %>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Item Name</th>
                        <th>Store Name</th>
                        <th>User</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>Note</th>
                    </tr>
                </thead>
                <tbody>
                    <% if @baskets.any? %>
                        <% @baskets.each_with_index do |basket, index| %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= basket['item_name'] %>
                                </td>
                                <td>
                                    <%= basket['store_name'] %>
                                </td>
                                <td>
                                    <%= basket['user_name'] %>
                                </td>
                                <td>
                                    <%= basket['quantity'] %>
                                </td>
                                <td>
                                    <%= rupiah_currency(basket['unit_price']) %>
                                </td>
                                <td>
                                    <%= rupiah_currency(basket['total_price']) %>
                                </td>
                                <td>
                                    <%= basket['note'] %>
                                </td>
                            </tr>
                        <% end %>
                    <% else %>
                        <tr>
                            <td colspan="8">
                                No items in basket
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>