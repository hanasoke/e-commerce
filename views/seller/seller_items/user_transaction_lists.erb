<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">User Basket Lists</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-sitemap me-1"></i>
            Transaction Lists
        </div>
        <div class="card-body">
            <% if session[:success] %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><%= session[:success] %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% session[:success] = nil %>
            <% end %>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Store Name</th>
                        <th>Item Name</th>
                        <th>User</th>
                        <th>Delivery</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>Payment Method</th>
                        <th>Account Number</th>
                        <th>Payment Photo</th>
                        <th>Payment Status</th>
                        <th>Transaction Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% if @transactions.any? %>
                        <% @transactions.each_with_index do |t, index| %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= t['store_name'] %>
                                </td>
                                <td>
                                    <%= t['item_name'] %>
                                </td>
                                <td>
                                    <%= t['user_name'] %>
                                </td>
                                <td>-</td>  <!-- You can replace this with shipment info later -->
                                <td>
                                    <%= t['quantity'] %>
                                </td>
                                <td>
                                    <%= rupiah_currency(t['unit_price']) %>
                                </td>
                                <td>
                                    <%= rupiah_currency(t['total_price']) %>
                                </td>
                                <td>
                                    <%= t['payment_method'] %>
                                </td>
                                <td>
                                    <%= t['account_number'] %>
                                </td>
                                <td>
                                    <% if t['payment_photo'] && !t['payment_photo'].empty? %>
                                        <img src="/uploads/<%= t['payment_photo'] %>" alt="Payment Photo" width="60">
                                    <% else %>
                                        <span>No photo</span>
                                    <% end %>
                                </td>
                                <td>
                                    <%= t['payment_status'] %>
                                </td>
                                <td>
                                    <%= t['transaction_date'] %>
                                </td>
                            </tr>
                        <% end %>
                    <% else %>
                        <tr>
                            <td colspan="13" class="text-center">
                                No transaction found
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>