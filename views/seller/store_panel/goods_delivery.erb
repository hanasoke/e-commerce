<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Delivery Lists</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-truck me-1"></i> Goods Delivery
        </div>
        <div class="card-body">
            <div class="row">
                <% @services.each do |service| %>
                    <% store_service = @store_services.find { |ss| ss['service_id'] == service['service_id'] } %>
                    <% active = store_service && store_service['service_status'] == 'active' %>
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <div class="form-check form-switch">
                                    <input 
                                        class="form-check-input service-toggle" 
                                        type="checkbox" 
                                        id="service_<%= service['service_id'] %>"
                                        data-service-id="<%= service['service_id'] %>"
                                        <%= active ? 'checked' : '' %>>
                                    <label class="form-check-label" for="service_<%= service['service_id'] %>">
                                        <%= service['service_name'] %> - <%= rupiah_currency(service['fee']) %>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.service-toggle').forEach(function(toggle) {
        toggle.addEventListener('change', function() {
            const serviceId = this.dataset.serviceId;
            const status = this.checked;

            fetch('/toggle_service', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x=www-form-urlencoded' },
                body: `service_id=${serviceId}&status=${status}`
            });
        });
    });
</script>