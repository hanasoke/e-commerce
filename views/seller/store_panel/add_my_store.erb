<div class="container-fluid px-4">
    <h1 class="mt-4">Add My Store</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a href="/seller_dashboard/<%= current_user['user_id'] %>">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Create My Store</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user me-1"></i>
        </div>
        <div class="card-body">
            <form action="/add_my_store/<%= current_user['user_id'] %>" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <input type="hidden" name="_method" value="post">
                </div>
                <div class="mb-3 row">
                    <label for="store_name" class="col-sm-2 col-form-label">Store Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="store_name" name="store_name" value="<%= params[:store_name] %>">
                    </div>
                    <% if @errors.any? { |e| e.include?('Store Name')} %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('Store Name')} %>
                        </div>
                    <% end %>
                </div>
                <div class="mb-3 row">
                    <label for="store_address" class="col-sm-2 col-form-label">Store Address</label>
                    <div class="col-sm-10">
                        <textarea type="text" class="form-control" id="store_address" name="store_address"><%= params[:store_address] %></textarea>
                    </div>
                    <% if @errors.any? { |e| e.include?('Store Address')} %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('Store Address')} %>
                        </div>
                    <% end %>
                </div>
                <div class="mb-3 row">
                    <label for="cs_number" class="col-sm-2 col-form-label">Customer Service Number</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="cs_number" name="cs_number" value="<%= params[:cs_number] %>">
                    </div>
                    <% if @errors.any? { |e| e.include?('CS Number')} %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('CS Number')} %>
                        </div>
                    <% end %>
                </div>

                <div class="mb-3 row">
                    <label for="store_status" class="col-sm-2 col-form-label">Status</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="store_status" name="store_status">
                            <option disabled <%= params[:store_status].nil? || params[:store_status].empty? ? 'selected' : '' %>>Open this select menu</option>
                            <option value="Active" <%= params[:store_status] == "Active" ? "selected" : "" %>>Active</option>
                            <option value="Inactive" <%= params[:store_status] == "Inactive" ? "selected" : "" %>>Inactive</option>
                        </select>
                    </div>
                    <% if @errors.any? { |e| e.include?('Store Status')} %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('Store Status')} %>
                        </div>
                    <% end %>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-6">
                        <label for="store_photo" class="form-label" for="store_photo">Store Photo</label>
                        <input class="form-control" type="file" id="store_photo" name="store_photo">
                    </div>
                    <% if @errors.any? { |e| e.include?('Store Photo')} %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('Store Photo')} %>
                        </div>
                    <% end %>
                    <div class="col-md-6">
                        <label for="store_banner" class="form-label" for="store_banner">Store Banner</label>
                        <input class="form-control" type="file" id="store_banner" name="store_banner">
                    </div>
                    <% if @errors.any? { |e| e.include?('Store Banner')} %>
                        <div class="form-text text-danger">
                            <%= @errors.find { |e| e.include?('Store Banner')} %>
                        </div>
                    <% end %>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-outline-primary float-end">Submit</button>
            </form>

            <!-- Back Button -->
            <a class="btn btn-outline-secondary float-start" href="/seller_dashboard/<%= current_user['user_id'] %>">Back</a>
        </div>
    </div>
</div>