<div class="container-fluid px-4">
    <h1 class="mt-4">Seller Chat Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">
            Manage your store conversations
        </li>
    </ol>

    <% if flash[:success] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>
                <%= flash[:success] %>
            </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% end %>

    <% if flash[:error] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>
                <%= flash[:error] %>
            </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% end %>

    <div class="row">
        <!-- Statiscs Cards -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-value-lg">
                                <%= @stores.count %>
                            </div>
                            <div>
                                Total Stores 
                            </div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-store fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-value-lg">
                                <%= @stores.sum { |s| s['total_conversation'].to_i } %>
                            </div>
                            <div>Total Conversations</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-comments fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-value-lg">
                                <%= @stores.sum { |s| s['total_unread'].to_i } %>
                            </div>
                            <div>Unread Messages</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-envelope fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-store me-1"></i>
            Your Store 
        </div>
        <div class="card-body">
            <% @stores.empty? %>
                <div class="alert alert-info text-center">
                    <i class="fas fa-store fa-3x mb-3"></i>
                    <h5>No Stores Found</h5>
                    <p>You don't have any stores yet. Create a store to start receiving messages from customers.</p>

                    <a href="/add_my_store" class="btn btn-primary">Create Store</a>
                </div>

            <% else %>

            <% end %>
        </div>
    </div>

</div>