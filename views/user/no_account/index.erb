<div class="container mt-5">
    <div class="row mb-3">
        <% if @items.any? %>
            <% @items.each do |item| %>
                <div class="col-md-3 mb-4">
                        <div class="card h-100 ">
                            <a href="/view_detail_item_no_user/<%= item['item_id'] %>" class="text-decoration-none text-dark">
                                <% if item['item_photo'] && !item['item_photo'].empty? %>
                                    <img src="/uploads/items/<%= item['item_photo'] %>" class="card-img-top" alt="<%= item['item_name'] %>">
                                <% else %>
                                    <img src="/img/question.png" class="card-img-top" alt="Default Item">
                                <% end %>
                                <div class="card-body">
                                    <p class="card-text">
                                        <%= item['item_name'] %>
                                    </p>
                                    <p class="card-text">
                                        <strong><%= rupiah_currency(item['item_price']) %></strong>
                                    </p>
                                </div>
                            </a>
                        </div>
                </div>
            <% end %>
        <% else %>
            <div class="col">
                <div class="alert alert-info">No Active items available right now.</div>
            </div>
        <% end %>
    </div>
</div>