<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div class="card border-secondary">
                <div class="card-header">User Profile View</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="mb-3 row">
                                <label for="name" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control-plaintext" id="name" value="<%= @profile['name'] %>">
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="mb-3 row">
                                <label for="username" class="col-sm-2 col-form-label">Username</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control-plaintext" id="username" value="<%= @profile['username']%>">
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="mb-3 row">
                                <label for="email" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control-plaintext" id="email" value="<%= @profile['email'] %>">
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="mb-3 row">
                                <label for="phone" class="col-sm-2 col-form-label">Phone</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control-plaintext" id="phone" value="<%= @profile['phone'] %>">
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="mb-3 row">
                                <label for="birthdate" class="col-sm-2 col-form-label">Birthdate</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control-plaintext" id="birthdate" value="<%= @profile['birthdate']%>">
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="mb-3 row">
                                <label for="age" class="col-sm-2 col-form-label">Age</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control-plaintext" id="age" value="<%= @profile['age']%>">
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="/user_profile_edit/<%= current_user['user_id'] %>" class="btn btn-success float-end">Edit My Profile</a>
                </div>
            </div>     
        </div>
    </div>
</div>